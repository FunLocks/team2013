<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Ranking"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBF6C5"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/ranking"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_marginBottom="32dp"
        android:text="Ranking"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/researchSecondFloor" />

    <Button
        android:id="@+id/firstFloor"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="32dp"
        android:text="1F"
        app:layout_constraintBottom_toTopOf="@+id/fourthFloor"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/secondFloor"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="2F"
        app:layout_constraintBottom_toBottomOf="@+id/firstFloor"
        app:layout_constraintEnd_toStartOf="@+id/thirdFloor"
        app:layout_constraintStart_toEndOf="@+id/firstFloor" />

    <Button
        android:id="@+id/thirdFloor"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="32dp"
        android:text="3F"
        app:layout_constraintBottom_toBottomOf="@+id/secondFloor"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/fourthFloor"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="32dp"
        android:text="4F"
        app:layout_constraintBottom_toTopOf="@+id/researchSecondFloor"
        app:layout_constraintStart_toStartOf="@+id/firstFloor" />

    <Button
        android:id="@+id/fifthFloor"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="5F"
        app:layout_constraintBottom_toBottomOf="@+id/fourthFloor"
        app:layout_constraintEnd_toStartOf="@+id/researchFirstFloor"
        app:layout_constraintStart_toEndOf="@+id/fourthFloor" />

    <Button
        android:id="@+id/researchFirstFloor"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="R1F"
        app:layout_constraintBottom_toBottomOf="@+id/fifthFloor"
        app:layout_constraintEnd_toEndOf="@+id/thirdFloor" />

    <Button
        android:id="@+id/researchSecondFloor"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="32dp"
        android:text="R2F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/fourthFloor" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFD74"
        android:text="COVID-19 Avoider Ranking"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        app:layout_constraintBottom_toTopOf="@+id/secondFloor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>